<!DOCTYPE html>
<html>
  <head>
    <title>AsahiTown</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if notice.present? %>
    <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert"><%= alert %></p>
    <% end %>
    <%= render partial: 'home/partial/header' %>
    <%= yield %>
    <%= render partial: 'home/partial/footer' %>
  </body>
</html>
