<section class="preview-welcome-area text-center" id="home">
  <div class="table">
    <div class="table_cell">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="preview_text_area">
              <h2><%= t('home.title') %></h2>
              <p><%= t('home.explanation') %></p>
              <a href="#" class="btn btn-lg preview-btn"><%= t('home.need_info') %></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="content_area section_padding_100_50">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="section_heading">
          <h2><%= t('home.menu') %></h2>
          <p><%= t('home.menu_comment') %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <% @news.each do |news|%>
      <div class="col-12 col-md-6 col-lg-4 wow fadeInUpBig" data-wow-delay="0.1s" data-wow-duration="1s" style="visibility: visible; animation-duration: 1s; animation-delay: 0.1s; animation-name: fadeInUpBig;">
        <div class="single_page_content">
          <%= link_to(content_tag(:img, src: '/images/default.png'), news_home_path(news.id))  %>
        </div>
        <div class="title">
          <h3><%= news.title %></h3>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>